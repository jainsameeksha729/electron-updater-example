{
  "name": "electron-updater-example",
  "version": "4.1.0",
  "main": "main.js",
  "description": "electron-updater example project",
  "author": {
    "name": "Sameeksha",
    "email": "jainsameeksha729@gmail.com"
  },
  "scripts": {
    "publish": "build -p always"
  },
  "devDependencies": {
    "electron": "^3.0.2",
    "electron-builder": "^20.28.4"
  },
  "dependencies": {
    "electron-log": "^1.3.0",
    "electron-updater": "^4.0.6"
  },
  "build": {
    "appId": "com.github.sameeksha.electronupdaterexample",
    "copyright": "Copyright Â© 2019 ${author}",

    "publish": [{
      "provider": "github",
      "owner": "jainsameeksha729",
      "repo": "electron-updater-example"
    }],
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "linux": {
      "category": "your.app.category.type",
      "target": [
        "deb",
        "snap"
      ]
    }
  }
}
